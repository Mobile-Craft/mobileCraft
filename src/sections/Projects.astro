---
import IOS from "../icons/IOS.astro";
import Android from "../icons/Android.astro";
import LinkButton from "../components/LinkButton.astro";
import Briefcase from "../icons/Briefcase.astro";
import SectionContainer from "../components/SectionContainer.astro";
import ReactNative from "../icons/ReactNative.astro";
import Firebase from "../icons/Firebase.astro";
import Flutter from "../icons/Flutter.astro";
import JavaScript from "../icons/JavaScript.astro";
import Dart from "../icons/Dart.astro";

const TAGS = {
    REACT_NATIVE: {
        name: "React Native",
        class: "bg-cyan-800 text-white",
        icon: ReactNative,
    },
    FLUTTER: {
        name: "Flutter",
        class: "bg-cyan-600 text-white",
        icon: Flutter,
    },
    FIREBASE: {
        name: "Firebase",
        class: "bg-white text-gray-800",
        icon: Firebase,
    },
    JS: {
        name: "JavaScript",
        class: "bg-orange-800 text-white",
        icon: JavaScript,
    },
    DART: {
        name: "DART",
        class: "bg-blue-600 text-white",
        icon: Dart,
    },
};

const PROJECTS = [
    {
        title: "APORDOM - App infomativa de la Autoridad Portuaria Dominicana",
        description:
            "Biblioteca de logos SVG de las marcas más populares. +10k visitas al mes. +2K svgs descargados. Creado desde cero con Next.js, React y Tailwind CSS.",
        link: "https://svgl.vercel.app/",
        github: "https://github.com/pheralb/svgl",
        image: "/projects/apordom2.webp",
        tags: [TAGS.REACT_NATIVE, TAGS.FIREBASE],
    },
    {
        title: "Mi Siembra - Retos de programación con JavaScript y TypeScript",
        description:
            "Plataforma gratuita con retos de programación. Más de 1 millón de visitas en un mes. +50K retos completados. Creada desde cero con Next.js, React y Tailwind CSS.",
        link: "https://adventjs.dev",
        image: "/projects/apordom.webp",
        tags: [TAGS.REACT_NATIVE, TAGS.FIREBASE],
    },
    {
        title: "Siembra Mas - Retos de programación con JavaScript y TypeScript",
        description:
            "Plataforma gratuita con retos de programación. Más de 1 millón de visitas en un mes. +50K retos completados. Creada desde cero con Next.js, React y Tailwind CSS.",
        link: "https://adventjs.dev",
        image: "/projects/apordom-hover.webp",
        tags: [TAGS.FLUTTER, TAGS.DART],
    },
    {
        title: "App Humano - Retos de programación con JavaScript y TypeScript",
        description:
            "Plataforma gratuita con retos de programación. Más de 1 millón de visitas en un mes. +50K retos completados. Creada desde cero con Next.js, React y Tailwind CSS.",
        link: "https://adventjs.dev",
        image: "/projects/apordom-hover.webp",
        tags: [TAGS.REACT_NATIVE, TAGS.JS],
    },
];
---

<SectionContainer id="proyectos">
    <div class="flex flex-col gap-y-16">
        <h2
            class="text-3xl font-semibold flex gap-x-3 items-center text-gray-100"
        >
            <Briefcase class="size-7" />
            Proyectos
        </h2>
        {
            PROJECTS.map(
                ({ image, title, description, tags, link, github }) => (
                    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
                        <div class="w-full md:w-1/2">
                            <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
                                <img
                                    alt="Recién llegado vs 5 años en Nueva Zelanda"
                                    class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
                                    loading="lazy"
                                    src={image}
                                />
                            </div>
                        </div>

                        <div class="w-full md:w-1/2 md:max-w-lg">
                            <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
                                {title}
                            </h3>
                            <div class="flex flex-wrap mt-2">
                                <ul class="flex flex-row mb-2 gap-x-2">
                                    {tags.map((tag) => (
                                        <li>
                                            <span
                                                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                                            >
                                                <tag.icon class="size-4" />
                                                {tag.name}
                                            </span>
                                        </li>
                                    ))}
                                </ul>

                                <div class="mt-2 text-gray-700 dark:text-gray-400">
                                    {description}
                                </div>
                                <footer class="flex items-end justify-start mt-4 gap-x-4">
                                    {github && (
                                        <LinkButton href={github}>
                                            <IOS class="size-6" />
                                            IOS
                                        </LinkButton>
                                    )}
                                    {link && (
                                        <LinkButton href={link}>
                                            <Android class="size-4" />
                                            Android
                                        </LinkButton>
                                    )}
                                </footer>
                            </div>
                        </div>
                    </article>
                ),
            )
        }
    </div>
</SectionContainer>
