---
import AppStore from "../icons/AppStore.astro";
import PlayStore from "../icons/PlayStore.astro";
import LinkButton from "../components/LinkButton.astro";
import Briefcase from "../icons/Briefcase.astro";
import SectionContainer from "../components/SectionContainer.astro";
import LetterGlitch from "../components/LetterGlitch";
import CardBorderAnimate from "../components/CardBorderAnimate.astro";
import { PROJECTS } from "../data/projects";
---

<SectionContainer id="proyectos">
    <div class="flex flex-col gap-y-16 pt-5">
        <h2
            class="text-3xl font-semibold flex gap-x-3 items-center text-gray-100"
        >
            <Briefcase class="size-7" />
            Proyectos
        </h2>
        {
            PROJECTS.map(
                ({ image, title, description, tags, ios, android, slug }) => (
                    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
                        <div class="w-full md:w-1/2">
                            {image !== "glitch" ? (
                                <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
                                    <img
                                        alt={title}
                                        class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
                                        loading="lazy"
                                        src={image}
                                    />
                                </div>
                            ) : (
                                <div class="md:h-[275px] h-full w-full relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
                                    <CardBorderAnimate>
                                        <LetterGlitch
                                            client:load
                                            glitchSpeed={50}
                                            centerVignette={true}
                                            outerVignette={false}
                                            smooth={true}
                                        />
                                    </CardBorderAnimate>
                                </div>
                            )}
                        </div>

                        <div class="w-full md:w-1/2 md:max-w-lg">
                            <h3
                                class="text-2xl font-bold text-gray-800 dark:text-gray-100"
                                style="view-transition-name: project-title"
                            >
                                {title}
                            </h3>
                            <div class="flex flex-wrap mt-2">
                                <ul class="flex flex-row mb-2 gap-x-2">
                                    {tags.map((tag) => (
                                        <li>
                                            <span
                                                class={`flex gap-x-2 rounded-full text-sm ${tag.class} py-1 px-2 `}
                                            >
                                                <tag.icon class="size-5" />
                                                {tag.name}
                                            </span>
                                        </li>
                                    ))}
                                </ul>

                                <div class="mt-2 text-gray-700 dark:text-gray-400 line-clamp-4">
                                    {description}
                                </div>
                                <footer class="flex items-end justify-start mt-4 gap-x-4">
                                    {ios && (
                                        <LinkButton href={ios} target="_blank">
                                            <AppStore class="w-4 h-4 mb-1" />
                                            IOS
                                        </LinkButton>
                                    )}
                                    {android && (
                                        <LinkButton
                                            href={android}
                                            target="_blank"
                                        >
                                            <PlayStore class="size-4" />
                                            Android
                                        </LinkButton>
                                    )}
                                    <LinkButton
                                        href={`/projects/${slug}`}
                                        target="_top"
                                    >
                                        <PlayStore class="size-4" target="" />
                                        Ver mas
                                    </LinkButton>
                                </footer>
                            </div>
                        </div>
                    </article>
                ),
            )
        }
    </div>
</SectionContainer>

