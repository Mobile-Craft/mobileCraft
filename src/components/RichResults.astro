---
import { faqEntries } from "../data/faqs";

/** https://developers.google.com/search/docs/appearance/structured-data/person */
const personSchema = {
    "@context": "https://schema.org",
    "@type": "Person",
    name: "Elder Tavárez",
    alternateName: "Elder Tavarez",
    url: "https://eldertavarez.vercel.app/",
    image: "https://eldertavarez.vercel.app/elderTavarezLink.jpg",
    jobTitle: "Desarrollador de aplicaciones móviles y especialista React Native",
    worksFor: {
        "@type": "Organization",
        name: "Mobile Craft",
    },
    sameAs: [
        "https://www.linkedin.com/in/elder-moises-tavarez-4874b9151/",
        "https://github.com/Mobile-Craft",
        "https://x.com/moisestavarez3",
        "https://www.instagram.com/moisestavarezgo",
    ],
    address: {
        "@type": "PostalAddress",
        addressLocality: "Santo Domingo",
        addressRegion: "Distrito Nacional",
        addressCountry: "DO",
    },
    knowsAbout: [
        "Desarrollo de aplicaciones móviles",
        "React Native",
        "Expo",
        "Flutter",
        "Node.js",
    ],
    description:
        "Elder Tavárez es desarrollador de aplicaciones móviles con más de cinco años creando soluciones en React Native, Expo y Flutter para empresas en República Dominicana.",
};

/** https://developers.google.com/search/docs/appearance/structured-data/service */
const serviceSchema = {
    "@context": "https://schema.org",
    "@type": "Service",
    name: "Desarrollo de aplicaciones móviles React Native",
    serviceType: "Mobile App Development",
    provider: {
        "@type": "Person",
        name: "Elder Tavárez",
        url: "https://eldertavarez.vercel.app/",
    },
    areaServed: {
        "@type": "AdministrativeArea",
        name: "República Dominicana",
    },
    offers: {
        "@type": "Offer",
        availability: "https://schema.org/InStock",
        priceSpecification: {
            "@type": "PriceSpecification",
            priceCurrency: "USD",
            price: "0",
            description: "Cotización personalizada para desarrollo de aplicaciones móviles iOS y Android.",
        },
    },
    description:
        "Servicio profesional de desarrollo de aplicaciones móviles iOS y Android con React Native, integración de APIs, despliegues en App Store y Google Play.",
};

/** https://developers.google.com/search/docs/appearance/structured-data/faqpage */
const FAQSchema = {
    "@context": "https://schema.org",
    "@type": "FAQPage",
    mainEntity: faqEntries.map(({ answer, question }) => ({
        "@type": "Question",
        name: question,
        acceptedAnswer: {
            "@type": "Answer",
            text: answer,
        },
    })),
};
---

<script
    type="application/ld+json"
    set:html={JSON.stringify(personSchema)}
/>
<script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
<script type="application/ld+json" set:html={JSON.stringify(FAQSchema)} />
